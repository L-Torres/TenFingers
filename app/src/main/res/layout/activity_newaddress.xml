<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFF4F2"
        android:orientation="vertical">

        <include layout="@layout/actionbar_total" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="收货人"
                            android:hint="联系电话:"
                            android:textColor="#FF333333"
                            android:textSize="@dimen/sp_14" />
                    </FrameLayout>

                    <EditText
                        android:id="@+id/ed_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textColorHint="#FF808080"
                        android:textColor="#FF333333"
                        android:gravity="center_vertical"
                        android:hint="请填写收货人"
                        android:lines="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="15dp"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/xuxian" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="联系电话"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/ed_phone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:gravity="center_vertical"
                        android:hint="手机号码"
                        android:inputType="phone"
                        android:lines="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="15dp"
                        android:textColorHint="#FF808080"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#FFE6E6E6" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="所在地区"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:hint="请选择"
                        android:lines="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="15dp"
                        android:textColorHint="#FF808080"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#FFE6E6E6" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_70"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_address_choice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:paddingTop="15dp"
                        android:text="详细地址"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/ed_area"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:paddingTop="15dp"
                        android:gravity="top"
                        android:hint="详细地址：如道路、门牌号、小区、楼栋号、单元室等"
                        android:paddingLeft="10dp"
                        android:paddingRight="15dp"
                        android:textColorHint="#FF808080"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#FFE6E6E6" />
                <LinearLayout
                    android:id="@+id/ll_default"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="设置默认地址"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_16" />
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1dp"/>
                    <ImageView
                        android:id="@+id/iv_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/default_y" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_del"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:textColor="#FC4F53"
                    android:text="删除该收货地址"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_15"
                    android:visibility="gone"

                    />


            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:text="保存修改"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/bg_darkgreen_4"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>