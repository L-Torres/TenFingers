<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_huahua"
        android:scaleType="centerCrop"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.32"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_addus"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.68"
            android:orientation="vertical"
            android:paddingLeft="22dp"
            android:paddingRight="15dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简单方便的按摩预约服务提供商"
                android:textColor="#FF333333"
                android:layout_gravity="center"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Massage service online appointmentMaking health more simple and convenient
                            "
                android:textColor="#FF333333"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_addus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_addus_green"
                android:text="加入我们"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="12sp"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>