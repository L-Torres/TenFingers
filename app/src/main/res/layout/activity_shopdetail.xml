<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_total"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include layout="@layout/actionbar_total"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/shape_corner_up_white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_24"
                        android:layout_marginTop="18dp"
                        android:paddingRight="24dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="荷塘悦色"
                            android:textColor="#ff000000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"/>
                        <ImageView
                            android:id="@+id/iv_collect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/heart_add"
                            android:scaleType="centerCrop"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="24dp"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="24dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <com.beijing.tenfingers.view.RatingBar
                            android:id="@+id/rating_at"
                            android:layout_width="@dimen/dp_15"
                            android:layout_height="@dimen/dp_15"
                            app:starCount="5"
                            app:starEmpty="@mipmap/star_n"
                            app:starFill="@mipmap/star_y"
                            app:starHalf="@mipmap/star_half"
                            app:starPadding="5dp"
                            app:stepSize="Half"
                            app:starImageSize="15dp"
                            />
                        <TextView
                            android:id="@+id/tv_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5分"
                            android:layout_marginLeft="5dp"
                            android:textColor="#fff2cb51"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:id="@+id/tv_buy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="63人消费"
                            android:textColor="#ff808080"
                            android:textSize="14sp"
                            android:layout_marginLeft="15dp"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="1dp"/>
                        <TextView
                            android:id="@+id/tv_focus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="231人关注"
                            android:textColor="#ff808080"
                            android:textSize="14sp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="北京市朝阳区八里庄街道"
                                android:textColor="#ff000000"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:drawableLeft="@mipmap/icon_address"
                                android:gravity="top"
                                android:drawablePadding="10dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="XXXX标志建筑南门向西200米"
                                android:textColor="#ff808080"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/green_phone"
                            android:padding="5dp"
                            android:scaleType="centerCrop"/>


                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="技师展示"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="24dp"
                        android:textColor="#ff000000"
                        android:textSize="14sp"
                        />
                    <ImageView
                        android:id="@+id/iv_tech"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/no_data"
                        android:visibility="gone"
                        />

                    <LinearLayout
                        android:id="@+id/ll_tech"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_24"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="@dimen/dp_37"
                        android:paddingRight="24dp"
                        >
                        <ImageView
                            android:id="@+id/iv_one"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@color/grey_80"
                            android:layout_height="78dp"/>
                        <View
                            android:layout_width="5dp"
                            android:layout_height="1dp"/>
                        <ImageView
                            android:id="@+id/iv_two"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@color/grey_80"
                            android:layout_height="78dp"/>
                        <View
                            android:layout_width="5dp"
                            android:layout_height="1dp"/>
                        <ImageView
                            android:id="@+id/iv_three"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@color/grey_80"
                            android:layout_height="78dp"/>
                        <View
                            android:layout_width="5dp"
                            android:layout_height="1dp"/>
                        <FrameLayout
                            android:id="@+id/fl_more"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/dp_78">

                            <ImageView
                                android:id="@+id/iv_four"
                                android:layout_width="match_parent"
                                android:background="@color/grey_80"
                                android:layout_height="78dp"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@mipmap/fuceng_touming"
                                android:scaleType="centerCrop"/>
                            <LinearLayout
                                android:id="@+id/ll_more"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_plus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+16"
                                    android:textColor="#ffffffff"
                                    android:textSize="24sp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="更多>>"
                                    android:textColor="#ffffffff"
                                    android:textSize="14sp"
                                    android:layout_marginTop="5dp"
                                    />

                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@mipmap/icon_small"
                    android:scaleType="centerCrop"/>


            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务项目"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="24dp"
                android:textColor="#ff000000"
                android:textSize="14sp"
                android:textStyle="bold"
                />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:id="@+id/rcy_service"/>

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:padding="5dp"
                android:text="查看更多"
                android:textColor="#ff006f55"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户评价"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="24dp"
                android:textColor="#ff000000"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/iv_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@mipmap/no_data"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:id="@+id/rcy_value"/>

            <TextView
                android:id="@+id/tv_value_more"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:padding="5dp"
                android:text="查看更多"
                android:textColor="#ff006f55"
                android:textSize="14sp" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>