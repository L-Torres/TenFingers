<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/actionbar_total" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:background="#EFF4F2"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/fl_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/order_top"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="@dimen/dp_5"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="待支付"
                                android:textColor="#ffffffff"
                                android:textSize="16sp"
                                />
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="1dp"/>
                            <TextView
                                android:id="@+id/tv_top"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="取消订单"
                                android:textColor="#ffffffff"
                                android:textSize="12sp"
                                android:background="@drawable/bg_tag_white"
                                android:paddingLeft="8.5dp"
                                android:paddingRight="8.5dp"
                                android:paddingTop="2dp"
                                android:paddingBottom="2dp"
                                />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="10dp"
                            android:text="订单已经提交，请您尽快完成支付"
                            android:textColor="#ffffffff"
                            android:textSize="12sp"
                            />
                    </LinearLayout>

                </FrameLayout>


                <LinearLayout
                    android:id="@+id/ll_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/white"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal">
                    <com.hemaapp.hm_FrameWork.view.RoundedImageView
                        android:id="@+id/iv_teach"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/head_pic"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal"
                            android:paddingBottom="@dimen/dp_8"
                            >
                            <TextView
                                android:id="@+id/tv_teach_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#ff000000"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                />
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="1dp"/>
                            <TextView
                                android:id="@+id/tv_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="联系技师"
                                android:textColor="#ff006f55"
                                android:textSize="12sp"
                                android:background="@drawable/bg_tag_green55"
                                android:paddingLeft="8.5dp"
                                android:paddingRight="8.5dp"
                                android:paddingTop="1dp"
                                android:paddingBottom="1dp"
                                />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:text=""
                            android:textColor="#ff000000"
                            android:textSize="12sp"
                            />
                    </LinearLayout>


                </LinearLayout>
                <com.amap.api.maps2d.MapView
                    android:id="@+id/bmapView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    />
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#FFFFFFFF"
                    android:layout_marginTop="15dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="4dp">

                    <LinearLayout
                        android:id="@+id/ll_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="15dp"
                            android:text=""
                            android:textColor="#ff000000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text=""
                            android:textColor="#ff808080"
                            android:textSize="12sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_pro"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/icon_service" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="15dp"
                                android:paddingTop="10dp"
                                android:paddingRight="15dp">

                                <TextView
                                    android:id="@+id/tv_pro_name"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="项目名称"
                                    android:textColor="#ff000000"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/tv_pro_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="价格"
                                    android:textColor="#ffff6262"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" 次/人 "
                                    android:textColor="#ffff6262"
                                    android:textSize="12sp" />


                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_pro_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="15dp"
                                android:ellipsize="end"
                                android:lines="2"
                                android:text="描述"
                                android:textColor="#ff808080"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_pro_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:drawableLeft="@mipmap/icon_time_small"
                                    android:text="时间"
                                    android:textColor="#ff999999"
                                    android:textSize="10sp" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15dp"
                                    android:text="X 1"
                                    android:textColor="#ffff6262"
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ECE9EC" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <TextView
                            android:id="@+id/tv_shop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="十指间自营旗舰店"
                            android:textColor="#ff000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_apply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_tag_grey_6"
                            android:paddingLeft="7dp"
                            android:paddingTop="3.5dp"
                            android:paddingRight="7dp"
                            android:paddingBottom="3.5dp"
                            android:text="申请售后"
                            android:textColor="#ff808080"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_corner_up_white_4"
                        android:paddingTop="15dp"
                        android:gravity="top"
                        android:paddingBottom="15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@mipmap/head_pic"
                            android:scaleType="centerCrop"
                            android:layout_marginLeft="@dimen/dp_20"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="等待技师接单"
                                android:textColor="#ff000000"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="预计16:20到达"
                                android:textColor="#ff808080"
                                android:textSize="10sp"
                                android:layout_marginTop="8dp"
                                />

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_refund_process"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_corner_down_grey"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_sqtk"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="申请退款"
                                android:gravity="center"
                                android:textColor="#ff006f55"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="等待店铺同意"
                                android:gravity="center"
                                android:textColor="#ff808080"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/tv_tkwc"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="退款完成"
                                android:textColor="#ff808080"
                                android:gravity="center"
                                android:textSize="12sp"/>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_35"
                            android:paddingLeft="35dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_p_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:textColor="#ff006f55"
                                android:text="●"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="0.5dp"
                                android:background="#FF808080"
                                />
                            <TextView
                                android:id="@+id/tv_p_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginRight="@dimen/dp_15"
                                android:textColor="#ff808080"
                                android:text="●"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="0.5dp"
                                android:background="#FF808080"
                                />
                            <TextView
                                android:id="@+id/tv_p_three"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:layout_marginRight="@dimen/dp_15"
                                android:textColor="#ff808080"
                                android:text="●"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dp_4"
                    app:cardElevation="0dp"
                    android:background="@color/white"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="20dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp_20"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingTop="25dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订单编号："
                                android:textColor="#ff808080"
                                android:textSize="12sp"
                                />
                            <TextView
                                android:id="@+id/tv_oder_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20200218008"
                                android:textColor="#ff000000"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingTop="25dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="支付方式："
                                android:textColor="#ff808080"
                                android:textSize="12sp"
                                />
                            <TextView
                                android:id="@+id/tv_pay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="在线支付"
                                android:textColor="#ff000000"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_advance_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingTop="25dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="预约时间："
                                android:textColor="#ff808080"
                                android:textSize="12sp"
                                />
                            <TextView
                                android:id="@+id/tv_s_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2020-02-18   16:30   周二"
                                android:textColor="#ff000000"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_go"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingTop="25dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="出行方式："
                                android:textColor="#ff808080"
                                android:textSize="12sp"
                                />
                            <TextView
                                android:id="@+id/tv_trip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="绿色出行"
                                android:textColor="#ff000000"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingTop="25dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="服务方式："
                                android:textColor="#ff808080"
                                android:textSize="12sp"
                                />
                            <TextView
                                android:id="@+id/tv_service_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="上门服务"
                                android:textColor="#ff000000"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingTop="25dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订单备注："
                                android:textColor="#ff808080"
                                android:textSize="12sp"
                                />
                            <TextView
                                android:id="@+id/tv_remark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="买家填写的备注信息"
                                android:textColor="#ff000000"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_refund"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingTop="25dp"
                            android:visibility="gone"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="退款原因："
                                android:textColor="#ff808080"
                                android:textSize="12sp"
                                />
                            <TextView
                                android:id="@+id/tv_reason"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:hint="请选择退款原因"
                                android:textColor="#ff000000"
                                android:textSize="12sp"
                                android:drawableRight="@mipmap/arrow_down"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15"
                            android:paddingTop="25dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="联系客服："
                                android:textColor="#ff808080"
                                android:textSize="12sp"
                                />
                            <TextView
                                android:id="@+id/tv_call"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="一键拨号"
                                android:textColor="#ff006f55"
                                android:textSize="12sp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@color/white"
                    app:cardCornerRadius="4dp"
                    android:elevation="0dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订单总金额："
                                android:textColor="#ff808080"
                                android:textSize="12sp"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="1dp"/>
                            <TextView
                                android:id="@+id/tv_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥199"
                                android:textColor="#ff000000"
                                android:textSize="12sp"
