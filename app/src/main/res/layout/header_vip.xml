<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <com.hemaapp.hm_FrameWork.view.RoundedImageView
            android:id="@+id/iv_head"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_marginLeft="25dp"
            android:src="@mipmap/head_pic"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="深爱如长风"
                    android:textColor="#ff000000"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:drawablePadding="12dp"
                    />
                <ImageView
                    android:id="@+id/iv_king"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/icon_king"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID：20200219"
                android:textColor="#ff808080"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                />


        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还有815点升级"
        android:layout_below="@+id/ll_top"
        android:layout_marginLeft="25dp"
        android:textColor="#ff333333"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_below="@+id/tv_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekLayout"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seek_text"
            android:text="0"
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:textColor="#ff333333"
            android:textSize="12sp"
            android:layout_marginRight="15dp"
            />
        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="4dp"
            android:focusable="false"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:max="100"
            android:progress="30"
            android:thumb="@drawable/seek_bar_thumb"
            android:progressDrawable="@drawable/seek_bar_bg"
            />
        <LinearLayout
            android:id="@+id/ll_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V1"
                android:textColor="#ff333333"
                android:textSize="12sp"
                />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/tv_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V2"
                android:textColor="#ff333333"
                android:textSize="12sp"
                />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务项目"
        android:layout_below="@+id/seekLayout"
        android:textColor="#ff000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        />
    <View
        android:layout_below="@+id/tv_pro"
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:layout_marginLeft="25dp"
        android:background="#FF000000"
        android:layout_marginTop="15dp"/>
</RelativeLayout>