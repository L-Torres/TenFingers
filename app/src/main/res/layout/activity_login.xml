<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/green"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/transparent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/actionbar_total"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/kanji_ten"
                android:layout_marginLeft="34.5dp"
                android:layout_marginTop="63.5dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xiandai"
                android:layout_marginLeft="34.5dp"
                android:layout_marginTop="19.5dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/black_heng"
                android:layout_marginLeft="34.5dp"
                android:layout_marginTop="19dp"/>
            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请输入手机号码"
                android:textCursorDrawable="@drawable/color_cursor"
                android:inputType="phone"
                android:text=""
                android:background="@null"
                android:textSize="16sp"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#898E8D"
                android:layout_marginLeft="34.5dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="69.5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26.5dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/ed_pwd"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:hint="请输入密码"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:inputType="textPassword"
                    android:background="@null"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textColorHint="#898E8D"
                    android:layout_marginLeft="34.5dp"
                    android:layout_marginRight="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:textColor="#007055"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:layout_marginRight="40dp"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/forward"
                android:layout_marginTop="36dp"
                android:layout_marginLeft="34.5dp"/>
            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="注册"
                android:textColor="#007055"
                android:layout_marginLeft="25.5dp"
                android:padding="5dp"
                android:layout_marginTop="40dp"/>
            <TextView
                android:id="@+id/tv_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="忘记密码"
                android:textColor="#007055"
                android:layout_marginLeft="25.5dp"
                android:padding="5dp"
                android:layout_marginTop="14dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录注册代表同意"
                    android:textColor="#888888"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="服务协议"
                    android:textColor="#159176"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="和"
                    android:textColor="#888888"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_secret"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="隐私政策"
                    android:textColor="#159176"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</FrameLayout>