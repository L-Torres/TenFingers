<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.51"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_left"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.49"
            android:layout_height="match_parent"
            android:text="万千个人在一座城市里\n若相遇\n倍感幸运，格外珍惜\n惟愿芳香\n在触及肌肤的指间\n细节萦绕\n超越万象之上"
            android:textColor="@color/black_4d"
            android:textSize="14sp"
            android:paddingRight="15dp"
            android:layout_marginLeft="7dp"
            android:paddingTop="25dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_darkgreen_4"
        android:text="现在预订"
        android:textColor="@color/white"
        android:textSize="11sp"
        android:paddingLeft="41dp"
        android:paddingRight="41dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="42dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="现代都市健康新理念"
        android:textSize="10sp"
        android:textColor="@color/black_33"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="40dp"
        />

</LinearLayout>