<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/father"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_total"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:hint="可提供产品"
                        android:text="姓名"
                        android:textColor="#ff333333"
                        android:visibility="gone"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/ed_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="bottom"
                        android:paddingBottom="5dp"
                        android:hint="请输入姓名"
                        android:lines="1"
                        android:textColor="#FF333333"
                        android:textColorHint="#FF808080"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/grey_80"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:hint="可提供产品"
                        android:text="联系电话"
                        android:textColor="#ff333333"
                        android:visibility="gone"
                        android:textSize="16sp"
                        android:textStyle="bold"

                        />

                    <EditText
                        android:id="@+id/ed_phone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:inputType="phone"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="bottom"
                        android:paddingBottom="5dp"
                        android:hint="请输入联系电话"
                        android:lines="1"
                        android:textColor="#FF333333"
                        android:textColorHint="#FF808080"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/grey_80"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:hint="可提供产品"
                        android:text="商家资质"
                        android:textColor="#ff333333"
                        android:visibility="gone"
                        android:textSize="16sp"
                        android:textStyle="bold"  />

                    <TextView
                        android:id="@+id/tv_zizhi"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="点击下方上传图片按钮上传您的资质"
                        android:lines="1"
                        android:gravity="bottom"
                        android:paddingBottom="5dp"
                        android:textColor="#FF333333"
                        android:textColorHint="#FF808080"
                        android:textSize="16sp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/grey_80"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
              >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:hint="可提供产品"
                        android:text="可提供产品"
                        android:textColor="#ff333333"
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:textStyle="bold"  />

                    <EditText
                        android:id="@+id/ed_product"
                        android:layout_width="0dp"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp_50"
                        android:background="@null"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:paddingBottom="5dp"
                        android:hint="请输入您可以提供的产品"
                        android:lines="1"
                        android:textColor="#FF333333"
                        android:textColorHint="#FF808080"
                        android:textSize="16sp"
                       />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/grey_80"/>

            </LinearLayout>

            <com.beijing.tenfingers.view.XtomGridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="12dp"
                android:horizontalSpacing="3dp"
                android:background="@color/bg_total"
                android:cacheColorHint="@color/transparent"
                android:listSelector="@color/transparent"
                android:numColumns="3"
                android:scrollbars="none" />
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                 />

            <TextView
                android:id="@+id/tv_join"
                android:layout_width="@dimen/dp_200"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="提交"
                android:textColor="#ffffffff"
                android:background="@drawable/bg_darkgreen_4"
                android:layout_marginRight="38dp"
                android:layout_marginLeft="38dp"
                android:layout_marginBottom="66dp"
                android:textSize="12sp"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>