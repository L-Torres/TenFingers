<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/shape_corner_up_white"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/tv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择支付方式"
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#FFE6E6E6"/>


       <LinearLayout
           android:id="@+id/ll_wx"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:paddingLeft="30dp"
           android:paddingRight="30dp"
           >
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/wx"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="微信支付"
               android:textColor="#ff333333"
               android:textSize="14sp"
               android:textStyle="bold"
               android:layout_marginLeft="15dp"
               />
           <View
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="1dp"/>
           <ImageView
               android:id="@+id/iv_wx"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/select_n"
               android:padding="@dimen/dp_15"/>
       </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_zfb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/zfb"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:textColor="#ff333333"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <ImageView
                android:id="@+id/iv_zfb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/select_n"
                android:padding="@dimen/dp_15"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_yue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/yue"
                />
            <TextView
                android:id="@+id/tv_yue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额支付"
                android:textColor="#ff333333"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <ImageView
                android:id="@+id/iv_yue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/select_n"
                android:padding="@dimen/dp_15"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_darkgreen_4"
            android:text="确定"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_8" />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            />
    </LinearLayout>

</RelativeLayout>